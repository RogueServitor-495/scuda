    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Debug C++ Server",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/server_12.4.so",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {"name": "LD_LIBRARY_PATH", "value": "/usr/local/cuda/lib64:${env:LD_LIBRARY_PATH}"}
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "加载调试符号",
                    "text": "file ${workspaceFolder}/build/server_12.4.so",
                    "ignoreFailures": false
                },
                {
                    "text": "set solib-search-path ${workspaceFolder}/build"
                }
            ],
            "preLaunchTask": "build"
        }
    ]
}